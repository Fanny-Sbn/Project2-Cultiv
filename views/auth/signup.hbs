<form method="post" action="/auth/signup" class="form" enctype="multipart/form-data">
    <h1 class="title">Signup</h1>
    <label for="pseudo">Email</label>
    <input class="input" name="pseudo" type="text" value="fooBar">

    <label for="email">Email</label>
    <input class="input" name="email" type="text" value="test@yopmail.com">

    <label for="password">Password</label>
    <input class="input" name="password" type="password" value="12345">
    <button class="btn">Enter</button>
    <hr>
    <p>
        Already have an account ? <a class="link" href="/auth/signin">Please signin !</a>
    </p>
</form>